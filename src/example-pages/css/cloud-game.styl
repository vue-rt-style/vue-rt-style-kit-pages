
.app-wifi
  .app-header
    display: none

  .app-wifi-top
    height: 40vw
    position: relative;
    z-index 2
    @media (max-width: tablet-upper-limit)
      height: 390px
    @media (max-width: mobile-upper-limit)
      height: auto

  .app-wifi-logo
    position: absolute;
    @media (max-width: mobile-upper-limit)
      position: relative;
  .app-wifi-logo-main
    @media (max-width: tablet-upper-limit)
      width: 124px
  .app-wifi-logo-wink
    @media (max-width: tablet-upper-limit)
      width: 74px
  .app-wifi-orange
    position: relative;

  .app-wifi-form
    box-shadow 0px 1px 33px -2px rgba(0, 0, 0, 0.1)
    margin-top: -129px
    background-color: #fff
    border-radius 8px
    @media (max-width: tablet-upper-limit)
      margin-top: -15px
    @media (max-width: mobile-upper-limit)
      box-shadow none
      margin-top: 0
      border-radius 0px
  .app-wifi-form-container
    @media (max-width: mobile-upper-limit)
      margin-top: -15vw
      position: relative;
  .app-wifi-banner-image
    padding-left horizontal-space * 3.5
    margin-left: calc(70px + 20px + (100vw - 145px) / 12 * 4)
    position: absolute;
    top: 0
    @media (min-width: container-upper-limit)
      margin-left: calc((100vw - 1600px) / 2 + 70px + 3px + 10px + 1460px/12*4 )

    @media (max-width: tablet-upper-limit)

      margin-left: 40%
      padding-left: 0


    @media (max-width: mobile-upper-limit)
      position: relative;
      margin-left: 0
      margin-top -26vw
  .app-wifi-banner-image-tag
    max-width 100%
    width: 100%

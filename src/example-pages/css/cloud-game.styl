  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/background-main.png)
  width: calc((238*100vw + 538904px) / 534);
  height: calc((118*100vw + 267080px) / 534);
  right: calc((248*100vw - 649556px) / 534);

  background-size: cover;
  top: 0


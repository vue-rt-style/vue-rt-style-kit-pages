.cloud-g-slider-item
  transition-timing-function ease
  transition-duration .2s
  transition-property margin
.cloud-g-slider-item--no-animate
  transition-timing-function ease-in-out
  transition-duration 0
  transition-property margin
.cloud-g-slider
  user-select: none
  display: flex
  flex-direction: row
  width: 100%;
  max-width: 1660px;
  overflow: hidden;
  position: relative;
  margin-left: auto
  margin-right: auto
  overflow: hidden;
  max-width calc(100vw - 20px)
  padding-left: 0
  padding-right: 0
  margin-left: 0
  margin-right: 0
  @media (max-width: tablet-upper-limit)
    max-width 100vw
    overflow-x auto
    padding-left: 40px
    padding-right: 40px
  @media (max-width: mobile-upper-limit)
    padding-left: 20px
    padding-right: 20px
  &:before
    content ''
    width: calc((20vw - 20px)/2)
    background: rgb(0,0,0);
    background: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(0,0,0,0,0) 100%);
    height: 100%
    position: absolute;
    left: 0
    top: 0
    @media (min-width: 1600px)
      width: 150px
    @media (max-width: tablet-upper-limit)
      width: 100px

  &:after
    content ''
    width: calc((20vw - 20px)/2)
    background: rgb(0,0,0);
    background: linear-gradient(90deg, rgba(0,0,0,0,0) 0%, rgba(0,0,0,1) 100%);
    height: 100%
    position: absolute;
    right: 0
    top: 0
    @media (min-width: 1600px)
      width: 150px
    @media (max-width: tablet-upper-limit)
      width: 100px

.cloud-g-slider-inner

  display: flex
  flex-direction row
  margin-left: calc((20vw - 20px)/ -2)
  @media (min-width: 1600px)
    margin-left: -150px
  @media (max-width: tablet-upper-limit)
    margin-left: 0


.cloud-g-slider-img
  width: calc(20vw - 20px)
  @media (min-width: 1600px)
    width: 300px
  @media (max-width: tablet-upper-limit)
    width: 200px
.cloud-g-bg-image
  background-image: url(https://static-cdn.rt.ru/sites/default/files/cloud-game/cloud-game2.jpg)
  background-repeat: no-repeat
  background-position: center center
  background-size: cover;
  
.cloud-g-slider-arrow-container
  pointer-events none
  position: absolute
  left: 0
  right: 0
  min-height: 100%

.cloud-g-slider-arrow
  position: absolute;
  width: 27px
  height: 52px
  top: -36px
  bottom: 36px
  margin-top: auto
  margin-bottom: auto
  cursor: pointer;
  pointer-events all
  transition-timing-function ease-in-out
  transition-duration .2s
  transition-property opacity
  z-index 10
.cloud-g-slider-arrow-hide
  opacity: 0
  pointer-events none
.cloud-g-slider-arrow-right
  right: 80px
.cloud-g-slider-arrow-left
  left: 80px

.rt-cart-cloud-g
  border-radius 0
  border 1px solid rgba(255,255,255,0.3)
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property box-shadow, border
  box-shadow 0 2px 0px transparent
  .rt-price__value
    color white
  .rt-price__info
    opacity: 0.7
  .rt-card__content
    padding-top: 40px
    padding-bottom: 40px
    @media (max-width: tablet-upper-limit)
      padding-top: 20px
      padding-bottom: 20px
  .rt-card__body,
  .rt-card__footer
    padding-left: 40px
    padding-right: 40px
    @media (max-width: tablet-upper-limit)
      padding-left: 20px
      padding-right: 20px
.rt-cart-cloud-g:hover
  border-color: rgba(255,255,255,1)
  box-shadow: 0 2px 36px #5DB700

.rt-cart-cloud-g-link
  color #5FBD00
.rt-cart-cloud-g.cloud-g-slider-img
  height: 100%
.cloud-g-icon
  @media (max-width: tablet-upper-limit)
    max-height 62px


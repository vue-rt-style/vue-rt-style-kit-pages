.ld-router
  background-color: #131010

  .app-header
    display: none

.ld-router-banner
  max-width 100vw
  position: relative;
  overflow: hidden;

.ld-router-banner__line1
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/lines-1.png)
  width: 641px;
  height: 587px;
  position: absolute;
  z-index 1
  top: 0
  left: 0
  background-size: cover;
  background-position: left top
  background-repeat: no-repeat

.ld-router-banner-content
  position: relative;
  z-index 3

.ld-router-banner__line2
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/lines-2.png)
  width: 1105px
  height: 726px
  max-width 50vw
  position: absolute;
  top: 0
  right: 0
  background-size: contain;
  background-position: right top
  background-repeat: no-repeat
  z-index 2
@media (max-width: 1740px) {
  .ld-router-banner__line1 {
    left: calc(50vw - 870px)
  }
  .ld-router-banner__line2{
    right calc(50vw - 870px)
  }
  //.ld-router-banner__blur{
  //  left: calc( 320px + 870px - 50vw)
  //}
}
@keyframes ShowRouter
  0%
    opacity: 0
    bottom: 730px
  100%
    opacity 1
    bottom: 76px


.ld-router-banner__router
  width: calc((77*100vw + 223762px) / 534)
  height:  calc((67*100vw + 201644px) / 534)
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/router.png)
  position: absolute;
  left: 0
  top: 0px
  background-size: contain;
  background-position: bottom center
  background-repeat:no-repeat
  max-width calc(100% - 40px)
  margin-left: 20px
  @media (max-width: 1024px) {
    height: 315px
  }
  @media (max-width: 768px) {
    height: 275px
    position: relative;
  }


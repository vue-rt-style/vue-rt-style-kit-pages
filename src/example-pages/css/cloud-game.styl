.lg-router-form
  position: relative;
  min-height 100vw

.lg-router-form:before
  content ''
  position: absolute;
  width: 50vw
  height: 35vw
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/formLines.png)
  right: 0
  top: 420px
  background-size: cover;

.lg-router-form-input
  display: none

.lg-router-form-check
  position: relative;
  border 1px solid #fff
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property border, box-shadow
  cursor: pointer;
  box-shadow: 0px 0px 0px #F30303;

  &:before
    content ''
    position: absolute;
    width: 0
    height: 0
    background-size: cover;
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/form-circle.png)
    top: 0
    left: 0
    opacity: 0

  &:after
    content ''
    position: absolute;
    width: 45px;
    height: 31px;
    background-size: cover;
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/form-line3.png)
    bottom: -7px
    right: -7px
    opacity: 0

.lg-router-form-input:checked + .lg-router-form-check
  cursor: default;

.lg-router-form-check:hover
  border 1px solid #FF5E2D

  .lg-router-form-label
    color #FF5E2D

.lg-router-form-check-decor
  position: absolute;
  top: 0
  bottom: 0
  left: 0
  right: 0
  opacity: 0

  &:before
    content ''
    position: absolute;
    width: 38px
    height: 13px;
    background-size: cover;
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/form-line1.png)
    top: -7px
    right: 5px

  &:after
    content ''
    position: absolute;
    width: 13px
    height: 77px;
    background-size: cover;
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/form-line2.png)
    top: 0px
    bottom 0
    margin-top auto
    margin-bottom: auto
    right: -7px

.lg-router-form-check-decor2
  position: absolute;
  top: 0
  bottom: 0
  left: 0
  right: 0
  opacity: 0

  &:before
    content ''
    position: absolute;
    width: 174px
    height: 13px;
    background-size: cover;
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/router-huawei/form-line4.png)
    bottom: -7px
    left: 50px

.lg-router-form-label
  position: absolute;
  top: -10px
  left: 28px
  display: inline-block
  padding-left: 12px
  padding-right: 12px
  background-color: #131010
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property background-color, color


.lg-router-form-input + .lg-router-form-check:before,
.lg-router-form-input + .lg-router-form-check:after,
.lg-router-form-input + .lg-router-form-check .lg-router-form-check-decor2,
.lg-router-form-input + .lg-router-form-check .lg-router-form-check-decor,
.lg-router-form-input + .lg-router-form-check .lg-router-form-check-decor2:before,
.lg-router-form-input + .lg-router-form-check .lg-router-form-check-decor2:after,
.lg-router-form-input + .lg-router-form-check .lg-router-form-check-decor:before,
.lg-router-form-input + .lg-router-form-check .lg-router-form-check-decor:after
  transition-timing-function ease-in-out
  transition-duration .4s
  transition-property opacity, width, height, top, left, right, bottom

.lg-router-form-input:checked + .lg-router-form-check
  border 1px solid #FF5E2D
  box-shadow: 0px 0px 6px #F30303;

  .lg-router-form-label
    color #FF5E2D

.lg-router-form-input:checked + .lg-router-form-check:before
  width 64px
  height 64px
  left: -32px
  top: -32px

.lg-router-form-input:checked + .lg-router-form-check:before,
.lg-router-form-input:checked + .lg-router-form-check:after,
.lg-router-form-input:checked + .lg-router-form-check .lg-router-form-check-decor2,
.lg-router-form-input:checked + .lg-router-form-check .lg-router-form-check-decor
  opacity: 1

.lg-router-form-input:checked + .lg-router-form-check .lg-router-form-check-decor:before
  top: -13px

.lg-router-form-input:checked + .lg-router-form-check .lg-router-form-check-decor:after
  right: -13px

.lg-router-form-input:checked + .lg-router-form-check:after
  bottom: -12px
  right: -12px

.lg-router-form-input:checked + .lg-router-form-check .lg-router-form-check-decor2:before
  bottom: -13px;
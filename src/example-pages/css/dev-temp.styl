.game__popup-tabs
  background-color #0d162d

.popup-tabs__navigation
  position relative
  display flex
  flex-direction row
  align-items center
  justify-content center
  @media (max-width: 767px)
    width 66.6vw
    margin 0 auto
    display block
  &-item-wrapper
    display flex
    overflow auto
    z-index 1
    position relative
    @media (max-width: 767px)
      height 101px

.popup-tabs__navigation-item
  padding 40px 30px
  position relative
  cursor pointer
  color rgba(255, 255, 255, .5)
  transition color .2s linear
  background-color transparent
  left 0
  @media (max-width 767px)
    width 66.6vw
    flex-shrink 0
    text-align center
    position absolute
    opacity 0
    transition opacity .4s linear
    top 0
    left 0
    right 0
    bottom 0
  &:after
    position absolute
    content ''
    width 0
    height 2px
    left 50%
    bottom 0
    transform translateX(-50%)
    transition width .2s ease-out, opacity .2s linear
    z-index 0
    opacity 0
    @media (max-width 767px)
      transition-duration .4s
  &+&
    margin-left 12px
  &--is-active
    background-color: #0d162d
    @media (max-width 767px)
      opacity 1
    &:before
      position absolute
      content ''
      top 0
      left 0
      right 0
      bottom 0
      background linear-gradient(bottom, rgba(255, 255, 255, 0.75) 0%, rgba(255, 255, 255, 0) 100%)
      mix-blend-mode overlay


.tabs--yellow
  .popup-tabs__navigation-item:after
    background-color #ffc700

.tabs--green
  .popup-tabs__navigation-item:after
    background-color #08d66d

.tabs--red
  .popup-tabs__navigation-item:after
    background-color #f60000

.tabs--blue
  .popup-tabs__navigation-item:after
    background-color #46c0ca

.popup-tabs__navigation-item:hover:after,
.popup-tabs__navigation-item--is-active:after
  width 100%
  opacity 1

.popup-tabs__navigation-item:hover,
.popup-tabs__navigation-item--is-active
  color #fff

.game__popup__carousel-slide
  padding 32px 20px 28px
  border-radius 8px
  width 100%
  position relative
  height 100%
  transition opacity .2s linear
  &__image
    width 48px
    height 48px
    flex-shrink 0
    &-body
      width 100%
      height 100%
  &-backing
    border-radius 8px
    position absolute
    mix-blend-mode overlay
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(255, 255, 255, 0.75)
    transition opacity .2s linear
    z-index 1
  &-border
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    border-radius 8px
    mix-blend-mode overlay
    overflow hidden
    background-image url('https://static-cdn.rt.ru/sites/default/files/img/mygame/card-border.svg')
    background-repeat no-repeat
    background-size auto 100%
    transition opacity .2s linear
    z-index 2
    &-image
      height 100%
      width auto
  &-wrapper
    position relative
    height 100%
    max-width 302px
    flex-grow 2
    @media (max-width: 1024px)
      max-width 37vw
    @media (max-width: 767px)
      max-width 66.6vw
  &--small-space-top
    padding 16px 20px 28px

.custom-slider__item
  width 22%
  flex-basis 22%
  padding 0 10px
  flex-shrink 0
  @media (max-width: 1024px)
    width 38.2%
    flex-basis 38.2%
    scroll-snap-align start
    &:first-child
      padding-left 20px
  @media (max-width: 767px)
    width 66.6vw
    flex-basis 66.6vw
    scroll-snap-align center
    box-sizing content-box

.popup-tabs
  position relative
  overflow hidden
  &:before,
  &:after
    position absolute
    content ''
    pointer-events none
  &:before
    left -350px
    background-image url('/static/images/B2B/game-tabs-1.png')
    width 904px
    height 620px
    bottom -60px
    background-size 100%
    background-repeat no-repeat
    z-index 4
  &:after
    right -780px
    width 1330px
    height 954px
    background-image url('/static/images/B2B/game-tabs-2.png')
    bottom -180px
    background-size 100%
    background-repeat no-repeat
    z-index 3

.tac
  text-align center

.popup-tabs__content-item
  display none
  &--is-active
    display block

.archeage
  .game__popup__carousel-slide__title
    min-height 112px

.warface,
.crossfire
  .game__popup__carousel-slide__image
    width 100%
    height 100px
    .game__popup__carousel-slide__image-body
      object-fit contain
  .game__popup__carousel-slide-wrapper
    min-height 236px

.lostark
  .game__popup__carousel-slide-wrapper
    min-height 204px

.custom-width
  width 62px!important

.crossfire,
.warface
  .game__popup__carousel-slide
    padding-top 40px
    &--small-space-top
      padding-top 16px

.popup-tabs__navigation-arrows
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  display none
  z-index 0
  @media (max-width: 767px)
    display block
  &-left,
  &-right
    opacity 1
    position absolute
    top 50%
    transform translateY(-50%)
    display flex
    align-items center
    justify-content center
    width 10px
    box-sizing content-box
  &--inactive
    opacity .5
  &-right
    right -80px
  &-left
    left -80px


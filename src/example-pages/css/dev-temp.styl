.custom-slider {
  overflow: hidden;
  position: relative;
}
@media (max-width: 1024px) {
  .custom-slider {
    padding: 0;
  }
}
.custom-slider__wrapper {
  position: relative;
}
.custom-slider__inner {
  overflow: hidden;
  flex-wrap: nowrap;
  margin: 0 -10px;
  -ms-overflow-style: none;
  scrollbar-width: none;
}
@media (max-width: 1024px) {
  .custom-slider__inner {
    scroll-snap-type: x mandatory;
    overflow-x: auto;
    scroll-padding: 0 calc((100% - (38.2% * 2))/2) 0 calc((100% - (38.2% * 2))/2);
  }
}
@media (max-width: 767px) {
  .custom-slider__inner {
    scroll-padding: 0;
  }
}
.custom-slider__inner::-webkit-scrollbar {
  display: none;
}
.custom-slider__controls {
  display: block;
  z-index: 3;
}
@media (max-width: 1024px) {
  .custom-slider__controls {
    display: none;
  }
}
.custom-slider__controls-button {
  position: absolute;
  top: calc(50% - 26px);
  left: auto;
  right: auto;
  bottom: auto;
  width: 52px;
  height: 52px;
  background-color transparent
  border-radius: 0;
  background: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNTEiIGhlaWdodD0iNTIiIHZpZXdCb3g9IjAgMCA1MSA1MiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTI0LjY5MjYgNTAuMzg1Mkw0OS4zODUyIDI1LjY5MjZMMjQuNjkyNiAxLjAwMDAxIiBzdHJva2U9IndoaXRlIiBzdHJva2Utd2lkdGg9IjIiLz4KPC9zdmc+Cg==');
  padding: 14px;
  box-sizing: border-box;
  cursor: pointer;
}
.custom-slider__controls-left {
  left: -1px;
  transform: rotate(180deg);
}
.custom-slider__controls-right {
  right: -1px;
}
.custom-slider__controls-backing {
  position: absolute;
  top: 0;
  left: auto;
  right: auto;
  bottom: 0;
  width: 150px;
}

.custom-slider__controls-backing-right {
  right: -5px;
  background: linear-gradient(to left, #0d162d 0%, #0d162d 30%, rgba(13,22,45,0) 100%)
}
.custom-slider__controls-backing-left {
  left: -5px;
  background: linear-gradient(to right, #0d162d 0%, #0d162d 30%, rgba(13,22,45,0) 100%)
}
.custom-slider__controls-backing--hidden {
  display: none;
}
.custom-slider__stretcher {
  display: none;
}
@media (max-width: 1024px) {
  .custom-slider__stretcher {
    display: block;
    flex-basis: 10px;
    min-width: 10px;
  }
}

.events-admin
  background-color #f8f8f8
  position relative
  min-height 100vh
  min-width 100vw
  color b2c-dark-slate
  &__auth
    &:after
      position absolute
      content ''
      right 0
      bottom 0
      background-image url("data:image/svg+xml,%3Csvg viewBox='0 0 358 294' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M357.843 0C357.782 89.1043 295.977 155.316 201.466 196.966L358 121.224L357.843 0Z' fill='%23FF4F12'/%3E%3Cpath d='M358 151.483L357.88 99.9316C347.03 123.534 326.029 135.889 311.631 143.415L0 294.001H357.856V151.52C357.952 151.496 358 151.483 358 151.483Z' fill='%237B939B'/%3E%3C/svg%3E%0A")
      width 358px
      height 294px
      @media (max-width tablet-upper-limit)
        size(262px, 216px)
      @media (max-width mobile-upper-limit)
        size(182px, 150px)
  &__events-list
    max-height 100vh

.header-logo
  display flex
  &__image
    width 31px
    height 52px
    @media (max-width tablet-upper-limit)
      size(29px, 48px)
    @media (max-width mobile-upper-limit)
      size(16px, 27px)
  &__text
    width 146px
    height 45px
    margin-left 6px
    @media (max-width tablet-upper-limit)
      size(134px, 41px)
    @media (max-width mobile-upper-limit)
      size(75px, 23px)

.pos-abs
  position absolute
  top 50%
  transform translateY(-50%)
  width 100vw

.auth-form-wrapper
  width 75%
  margin 0 auto
  @media (max-width mobile-upper-limit)
    width 100%

.events-header
  border-bottom 1px solid #B8B9C0
  &__logo-text
    font-size 24px
    line-height 26px
    font-weight 600
    text-transform uppercase
    font-feature-settings 'tnum' on, 'lnum' on
    margin-left 30px
    @media (max-width desktop-upper-limit)
      font-size 22px
      line-height 23px
      margin-left 26px
    @media (max-width mobile-upper-limit)
      font-size 10px
      line-height 10px
      margin-left 12px
  &__navigation
    @media (max-width tablet-upper-limit)
      background-color #f8f8f8
      display flex
      flex-direction column
      padding 20px
      a
        padding 20px 0
    &__link
      padding-bottom 2px
      border-bottom 2px solid transparent
      &:hover
        text-shadow .5px 0 0 main-color
      @media (max-width tablet-upper-limit)
        border-bottom 1px solid main-color01
      &+&
        margin-left 40px
        @media (max-width tablet-upper-limit)
          margin-left 0
      &--active
        border-bottom-color b2c-orange
        font-weight 600
        &:hover
          text-shadow none
        @media (max-width tablet-upper-limit)
          border-bottom-color main-color01
    &-button
      width 20px
      height 1px
      background-color main-color
      position relative
      transition transform .3s linear
      &:before,
      &:after
        position absolute
        content ''
        width 100%
        height 1px
        background-color main-color
        left 0
        right 0
        transition all .3s linear
      &:before
        top -5px
      &:after
        bottom -5px
      &--active
        transform rotate(135deg)
        &:before
          transform rotate(90deg)
          top 0
        &:after
          transform rotate(360deg)
          bottom 0
      &-wrapper
        padding 12px 2px
    &-wrapper
      position relative
    &-inner
      @media (max-width tablet-upper-limit)
        position absolute
        top 44px
        right -20px
        width 100vw
        overflow hidden
        max-height 0
        transition max-height .2s linear
        z-index 10
        &--active
          max-height 300px
      @media (max-width mobile-upper-limit)
        top 39px
    &-shadow
      @media (max-width tablet-upper-limit)
        display none
        position fixed
        top 116px
        right 0
        width 100vw
        height calc(100vh - 116px)
        background-color main-color03
        z-index 9
        &--active
          display block
      @media (max-width mobile-upper-limit)
        top 81px
        height calc(100vh - 81px)
  .rt-vam
    transition color .2s linear
    &:hover
      color main-color

.events-list-wrapper
  overflow hidden
  height calc(100vh - 293px)
  @media (max-width tablet-upper-limit)
    height calc(100vh - 341px)
  @media (max-width mobile-upper-limit)
    height calc(100vh - 368px)
  &__inner
    overflow-y scroll
    max-height 100%
    @media (max-width tablet-upper-limit)
      overflow-y auto
      overflow-x hidden

.event-list-item
  background-color #fff
  border-radius 8px
  display block
  &:hover
    box-shadow 3px 3px 4px #C8C8C8
  &+&
    margin-top 12px
  &__title
    text-transform uppercase

.md-pos-abs
  @media (max-width mobile-upper-limit)
    position absolute
    top 12px
    right 12px

.create-event
  .rt-popup-inner
    align-items flex-start
    .row
      top 160px
      justify-content flex-end

.event-item
  &__counters
    &__item
      &+&
        margin-left 12px
      .digit
        min-width 100px
        border-radius 8px
  &__action-buttons
    .rt-button:not([disabled]):hover
      background-color b2c-white
      .button-text
        color b2c-orange
      .rt-sys-icon
        fill b2c-orange
    .rt-button-full-white[disabled]
      color main-color07
      background-color b2c-white05
      opacity .5

#upload
  display none

.button-text
  transition color .2s linear
  font-size 14px
  line-height 20px
  @media (max-width tablet-upper-limit)
    font-size 12px
    line-height 16px

.events-admin
  &__event-item
    &__table
      @media (max-width tablet-upper-limit)
        width fit-content
        overflow auto
        padding-right 20px
    &__table-cell
      width calc(100% / 7)
      position relative
      @media (max-width tablet-upper-limit)
        width 164px
        flex-shrink 0
      &+&
        margin-left 8px
    &__table-row
      padding 14px 20px 16px
      background-color b2c-white
      @media (max-width tablet-upper-limit)
        justify-content flex-start
      &+&
        position relative
        &:before
          position absolute
          content ''
          top 0
          left 20px
          right 20px
          height 1px
          background-color main-color01-no-opacity
    &__table-head
      position relative
      &:after
        position absolute
        content ''
        height 2px
        background-color b2c-orange
        left 20px
        right 20px
        bottom 0
      .events-admin__event-item__table-row
        border-top-right-radius 8px
        border-top-left-radius 8px
    &__table-body
      position relative
      //&:before
      //  content ''
      //  position absolute
      //  height 4px
      //  top 0
      //  left 0
      //  right 0
      //  background-color b2c-white
      .events-admin__event-item__table-row
        &:first-child
          padding-top 20px
        &:last-child
          border-bottom-left-radius 8px
          border-bottom-right-radius 8px
      &-wrapper
        padding-bottom 20px
        height calc(100vh - 351px)
        overflow auto
        .events-admin__event-item__table-row:nth-child(1)
          position relative
          &:before
            content ''
            position absolute
            height 4px
            top 0
            left 0
            right 0
            background-color b2c-white
        @media (max-width tablet-upper-limit)
          height calc(100vh - 302px)
        @media (max-width mobile-upper-limit)
          height calc(100vh - 376px)

.ac-datepicker
  &-wrapper
    position relative
    border-bottom 2px solid main-color01
    &:before,
    &:after
      position absolute
      content ''
      height 2px
      width 0
      left 0
      right 0
      bottom -2px
    &:before
      background-color main-color03
      transition width .2s linear
    &:after
      background-color b2c-purple
      transition width .2s linear
    &:hover
      &:before
        width 100%
    &--focused
      &:after
        width 100%
  &__body
    position relative
    width 100%
    height 46px
    outline none
    border none
    //border-bottom 2px solid main-color01
    line-height 44px
    padding 16px 0 0
    background-color transparent

  &__calendar-icon
    position absolute
    top 12px
    right 3px
    width 20px
    height 20px
    background-position 50% 50%
    background-repeat no-repeat
    cursor pointer
  &__delete-icon
    position absolute
    top 20px
    right 48px
    width 20px
    height 20px
    cursor pointer
    display none
  &__pseudo-placeholder
    position absolute
    top 12px
    left 0
    font-size 16px
    color main-color07
    transition top .2s ease, color .2s ease, font-size .2s ease
    &--active
      color main-color05
      font-size 12px
      top 0
    .ac-datepicker__body:focus+&,
    &--focus
      color b2c-purple

.single-date-picker__calendar-month-header
  position relative

.single-date-picker__cell.single-date-picker__selected,
.single-date-picker__cell:hover
  border-radius 2px
  //background-color b2c-purple
  color b2c-orange
  font-weight 500
  opacity 1!important

.single-date-picker__calendar-view
  min-width none
  position absolute
  top 54px
  left 0
  right auto
  box-shadow 0 0 1px rgba(28, 41, 61, 0.1), 0 36px 36px rgba(28, 41, 61, 0.1);
  //border-radius 4px
  overflow hidden

.single-date-picker__calendar-month-header
  background-color b2c-white
  color main-color
  display flex
  justify-content space-between
  padding 12px 20px

.ac-datepicker-wrapper
  position relative
  z-index 4

.single-date-picker__calendar-month
  width calc((36px * 7) + (14px * 2))
  padding 12px 14px
  background-color b2c-white
  th
    text-align center

.single-date-picker__calendar-week-header
  //font-weight 500
  font-size 12px
  line-height 16px
  color main-color03

.single-date-picker__date,
.single-date-picker__arrow
  cursor pointer
  z-index 2
  position relative

.single-date-picker__date
  width 100%
  height 100%

.single-date-picker__cell
  width 36px
  height 36px
  text-align center

.single-date-picker__year
  text-transform capitalize

.td-ovs
  @media (max-width tablet-upper-limit)
    overflow scroll
    padding 0 20px
    margin 0 -10px 0 -20px

//.rt-col.ovs
//  @media (max-width tablet-upper-limit)
//    overflow auto
//    padding-right 0

.edit-event,
.delete-event
  .row
    @media (min-width laptop-lower-limit)
      justify-content flex-end
      padding-right 32px

.events-admin__event-item
  .edit-event
    .row
      @media (min-width laptop-lower-limit)
        padding-right 0

.select-v2-arrow.rt-sys-icon
  z-index 3

.status-check
  position absolute
  display none
  background-color #fff
  z-index 1
  box-shadow 0 1px 0 rgba(28, 41, 61, 0.1), 0 36px 36px rgba(28, 41, 61, 0.1)
  border-radius 4px
  top calc(100% + 16px)
  right 0
  &--active
    display block
  .checkbox
    word-break keep-all
    white-space nowrap
    display block
    &+.checkbox
      margin-top 12px

.filter-icon
  transition transform .2s linear
  &--active
    transform rotate(180deg)

.events-admin__event-item__table-cell.d-flex.d-space-between
  cursor pointer

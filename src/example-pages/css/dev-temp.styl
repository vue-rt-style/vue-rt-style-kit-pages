.blog
  padding-top 50px
  @media(max-width tablet-upper-limit)
    overflow hidden
  &__header
    padding 12px 0 10px
    display flex
    align-items flex-end
    justify-content space-between
    &-left
      display flex
      align-items flex-end
  &-footnote
    text-transform uppercase
    letter-spacing 2px
  &__tags-wrapper
    padding 20px 8px
    border-bottom 1px solid main-color007-no-opacity
    @media(max-width tablet-upper-limit)
      padding 20px 0
    &__inner
      overflow auto
      @media(max-width tablet-upper-limit)
        margin 0 -20px
        padding-left 28px
    &-stretcher
      @media(max-width tablet-upper-limit)
        min-width 28px
    &--no-scroll
      border none
      padding 8px 0
      .blog__tag
        margin-right 28px
        margin-top 12px
        &+.blog__tag
          margin-left 0!important
  &__tag
    cursor pointer
    transition color.2s linear
    word-break keep-all
    &+&
      margin-left 28px
    &:hover,
    &--active
      color b2c-red
  &__weekly-theme
    min-height 438px
    &-wrapper
      position relative
    &__image
      position relative
      display block
      object-fit cover
      max-width 100%
    &__description
      margin-bottom 8px
    &__label
      letter-spacing 2px
      display inline-block
      position absolute
      top 28px
    &__bottom
      position absolute
      bottom 28px
      left 28px
      @media(max-width mobile-upper-limit)
        position relative
        bottom auto
        left auto
    &__title
      min-height 64px
      font-size 24px
      line-height 32px
      @media(max-width mobile-upper-limit)
        font-size 16px
        line-height 20px
        min-height none
    &__ttr
      .rt-sys-icon
        //fill b2c-white07
        @media(max-width mobile-upper-limit)
          fill main-color05
  &__popular
    @media(max-width tablet-upper-limit)
      border-bottom 1px solid main-color007-no-opacity
    &__item-title
      font-size 16px
      line-height 20px
      font-weight 500
      &:hover
        color b2c-red
  &__article-tile
    &:nth-child(n+4)
      margin-top 60px
      @media(max-width tablet-upper-limit)
        margin-top 0
    .rt-col-4
      &:not(:nth-child(3n + 1))
        border-left 1px solid main-color007-no-opacity
        @media(max-width tablet-upper-limit)
          border-left none
      &:not(:first-child)
        @media(max-width tablet-upper-limit)
          .blog__article-tile__item
            border-top 1px solid main-color007-no-opacity
    &__image
      min-height 207px
      object-fit cover
      width 100%
      &-wrapper
        display flex
  &__promo-block
    border-right 1px solid main-color007-no-opacity
  &__link-button
    text-align center
    padding 18px
    font-size 14px
    line-height 16px
    border 1px solid main-color007-no-opacity
  &__hint-carousel
    height 100%
    position relative
    //@media(max-width tablet-upper-limit)
    //  min-height 400px
    &__item
      background-color b2c-gray
      position absolute
      z-index -1
      opacity .3
      transform translateY(-17px) scale(0.9)
      transition all .3s linear
      top 0
      &--active
        transform translateY(15px)
        z-index 1
        opacity 1
        position relative
    &__refresh
      background-color b2c-white
      border 2px solid main-color007-no-opacity
      cursor pointer
  &__add-article-button
    border 1px solid main-color007-no-opacity
    font-size 14px
    line-height 16px
    cursor pointer
  &__manual
    .rt-col-4+.rt-col-4
      border-left 1px solid main-color007-no-opacity
      @media(max-width mobile-upper-limit)
        border none
    .color-block--main-color003-no-opacity
      @media(max-width tablet-upper-limit)
        background-color transparent
    &-wrapper
      @media(max-width tablet-upper-limit)
        background-color #F8F8F8
    .rt-sys-icon
      @media(max-width tablet-upper-limit) and (min-width tablet-lower-limit)
        fill main-color05
    &-link
      font-size 16px
      line-height 20px
      font-weight 500
      display block
  &__frame
    min-height 320px
  &-article__image
    &-body
      max-width 100%
    &-carousel
      overflow hidden
      position relative
      &__item
        position absolute
        top 0
        left 0
        z-index -9
        opacity 0
        &--active
          position relative
          z-index 1
          opacity 1
        &-body
          width 100%
          display block
  &__video
    &-block
      width 100%
      cursor pointer
      &-wrapper
        position relative
        display flex
        &:after
          position absolute
          content ''
          top 0
          left 0
          right 0
          bottom 40px
          background-color main-color02
          pointer-events none
          z-index 1
        &--no-shadow
          &:after
            display none
    &-play-button
      position absolute
      top calc(50% - 20px)
      left 50%
      transform translateX(-50%) translateY(-50%)
      width 36px
      height 48px
      pointer-events none
      transition opacity .2s linear
      z-index 2
      &--hidden
        opacity 0
    &-title
      position absolute
      bottom 72px
      left 32px
      max-width calc(100% - 64px)
      transition opacity .2s linear
      z-index 2
      &--hidden
        opacity 0
        pointer-events none
  &__table
    margin-bottom 40px
    &-title
      text-transform uppercase
      padding 16px 20px
      background-color main-color003
      border-bottom 4px solid b2c-white
    th,
    td
      background-color main-color003
      border 4px solid b2c-white
      padding 16px 8px
      &:first-child
        border-left none
        padding-left 20px
      &:last-child
        border-right none
    td
      font-size 14px
      line-height 20px
      @media(max-width mobile-upper-limit)
        font-size 12px
        line-height 16px
    th,
    td:first-child
      font-size 14px
      line-height 16px
      font-weight 500
      @media(max-width mobile-upper-limit)
        font-size 12px
  &__share__icon
    filter brightness(0)
    opacity .7
    transition all .1s linear
    display inline-flex
    &:hover
      filter brightness(1)
      opacity 1
    &+&
      margin-left 16px
  &__form
    position relative
    &-pseudo-background
      position absolute
      top 0
      bottom 0
      width 100vw
      z-index 0
    &-body
      position relative
      z-index 1
  &-footer
    &__top
      border-bottom 1px solid main-color01
    &__privacy
      font-size 14px
      line-height 20px

.blog__title
  .select-v2
    max-width 120px
  .select-v2__inner
    border none
    align-items center
    position relative
    &:after
      position absolute
      content ''
      background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M7 10L17 10L12.5512 14.7559C12.2468 15.0814 11.7532 15.0814 11.4488 14.7559L7 10Z' fill='%23101828'/%3E%3C/svg%3E%0A");
      width 24px
      height 24px
      background-repeat no-repeat
      top 50%
      transform translateY(-50%)
      right 0
      background-color transparent
      bottom auto
      left auto
      transition transform .2s linear
  .select-v2__container:after,
  .select-v2-arrow,
  .select-v2:hover .select-v2__inner:before
    display none
  .select-v2-value
    padding-top 0
    padding-left 20px
    margin-bottom 0
    @media(max-width mobile-upper-limit)
      padding-left 0
  .select-v2-option--select
    transition color .1s linear
    color main-color
  .select-v2-option.select-v2-option--focus
    transition color .1s linear
    background-color transparent
    color b2c-red
  .select-v2-value,
  .select-v2-option .rt-font-control
    font-size 16px
    line-height 20px
  .select-v2-list
    padding-left 12px
    @media(max-width mobile-upper-limit)
      width calc(100% + 20px)
      left -20px
  .select-v2-list-inner
    padding-top 10px
    padding-bottom 10px
  .select-v2--is-open .select-v2__inner:after
    transform translateY(-50%) rotate(-180deg)

.rt-col-12
  &+&
    .blog__popular__item
      border-top 1px solid main-color007-no-opacity
      @media(max-width tablet-upper-limit)
        border none
    @media(max-width tablet-upper-limit)
      &:nth-child(n+3)
        .blog__popular__item
          border-top 1px solid main-color007-no-opacity

.sticky-block
  position sticky
  top 240px
  .blog__popular
    border-bottom none

.navigation
  display flex
  align-items center
  font-size 14px
  line-height 16px
  color main-color07
  @media(max-width tablet-upper-limit)
    display none
  &-link
    white-space nowrap
    word-break keep-all
    &+&
      margin-left 20px
      @media(max-width tablet-upper-limit)
        display block
        margin-left 0
        margin-top 20px
    .blog-footer &+&
      @media(max-width tablet-upper-limit)
        margin-left 16px
        margin-top 0
      @media (max-width: mobile-upper-limit)
        margin-left 0
        margin-top 16px
    &-wrapper
      position relative
      margin-left 20px
      &__inner
        position absolute
        height 0
        top calc(100% + 12px)
        left 50%
        transform translateX(-50%)
        overflow hidden
        box-shadow 0 0 5px 0 rgba(main-color, .2)
        z-index 9
        .navigation-link
          display block
          &+.navigation-link
            margin-left 0
            margin-top 20px
      &__button
        position relative
        cursor pointer
        &:after
          position absolute
          content ''
          width 8px
          height 4px
          transition transform .2s linear
          top calc((100% - 4px) / 2)
          right 0
          background-image url("data:image/svg+xml,%3Csvg width='9' height='5' viewBox='0 0 9 5' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 0.5L4.5 4L8 0.5' stroke='%23101828' stroke-opacity='0.7'/%3E%3C/svg%3E%0A")
        &--active
          &:after
            transform rotate(-180deg)
          &+.navigation-link-wrapper__inner
            height auto
            padding 12px
            background-color b2c-white
  &-mobile
    position relative
    &__list
      position absolute
      top calc(100% + 10px)
      right -20px
      overflow hidden
      background-color b2c-white
      transform translateX(100%)
      transition transform .2s linear
      z-index 3
      width 50vw
      height 100vh
      box-shadow -8px 0 8px -8px rgba(main-color, .2)
      @media(max-width mobile-upper-limit)
        width 100vw
    &__button
      &--active
        &+.navigation-mobile__list
          transform translateX(0)


.blog-container
  width 100%
  max-width container-upper-limit
  margin-left auto
  margin-right auto
  padding-left horizontal-space * 4.75
  padding-right horizontal-space * 4.75
  @media (max-width: tablet-upper-limit)
    padding-left horizontal-space * .5
    padding-right horizontal-space * .5
  @media (max-width: desktop-lower-limit)
    padding-left horizontal-space * .5
    padding-right horizontal-space * .5
  @media (max-width: mobile-upper-limit)
    padding-left horizontal-space * .5
    padding-right horizontal-space * .5
  @media(min-width laptop-lower-limit)
    .row
      margin 0 -20px

    .rt-col
      padding-left 20px
      padding-right 20px

    for $num in (1..12)
      .rt-col-{$num}
        padding-left 20px
        padding-right 20px
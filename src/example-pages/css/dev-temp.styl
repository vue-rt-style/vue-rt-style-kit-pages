.custom-list
  overflow hidden
  &__item
    min-height 260px
    color b2c-white
    display flex
    align-items flex-start
    flex-basis 14vw
    flex-shrink 0
    flex-grow 0
    width 14vw
    max-width 224px
    position relative
    @media (max-width tablet-upper-limit)
      min-height 280px
    @media (max-width mobile-upper-limit)
      min-height auto
      width auto
      padding-left 80px
      flex-basis 48px
      max-width none
      &+&
        margin-top 64px
    &:after
      position absolute
      size(32px)
      background-color b2c-orange
      top calc(50% - 35px)
      left 0
      border-radius 50%
      color b2c-white
      font-size 18px
      line-height 32px
      text-align center
      @media (max-width tablet-upper-limit)
        top calc(50% - 55px)
      @media (max-width mobile-upper-limit)
        top -5px
        left -4px
    &:before
      position absolute
      content ''
      size(2px, 85px)
      left 15px
      top 16px
      bottom auto
      background-color b2c-orange
      @media (max-width mobile-upper-limit)
        size(85px, 2px)
        top 10px
        left 10px
    &:nth-child(even)
      align-items flex-end
      @media (max-width tablet-upper-limit)
        .custom-list__item-text
          min-height 96px
      @media (max-width mobile-upper-limit)
        .custom-list__item-text
          min-height 48px
      &:before
        top auto
        bottom 50px
        @media (max-width tablet-upper-limit)
          bottom 85px
        @media (max-width mobile-upper-limit)
          bottom auto
          top 10px
    &:first-child
      &:after
        box-shadow 0 0 0 34px rgba(255,79,18, .2)
    &-text
      font-size 24px
      line-height 32px
      word-break keep-all
      position relative
      min-width 400px
      @media (max-width tablet-upper-limit)
        font-size 16px
        line-height 24px
        min-width auto
      &:before
        position absolute
        content ''
        size(8px)
        background-color b2c-orange
        border-radius 50%
        top .5em
        left 12px
  &__wrapper
    position relative
    display flex
    flex-direction row
    @media (max-width mobile-upper-limit)
      flex-direction column
    &:before
      position absolute
      content ''
      size(calc(14vw * 5), 2px)
      max-width calc(224px * 5)
      background-color b2c-orange
      top calc(50% - 19px)
      left 0
      @media (max-width tablet-upper-limit)
        top calc(50% - 40px)
      @media (max-width mobile-upper-limit)
        size(2px, calc((48px + 64px) * 5))
        top 0
        left 10px
  &__circle
    position absolute
    top calc(50% - 16px)
    left 16px
    border 2px solid b2c-white01
    border-radius 50%
    transform translateX(-50%) translateY(-50%)
    @media (max-width mobile-upper-limit)
      top 0
    &-one
      size(300px)
    &-two
      size(558px)
    &-three
      size(1568px)

for $num in (1...7)
  .custom-list__item
    &:nth-child({$num})
      &:after
        content ('' + $num + '')


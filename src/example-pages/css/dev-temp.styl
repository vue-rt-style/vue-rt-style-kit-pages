.permanent-content
  position relative
  z-index 1

.shifting-content
  position absolute
  size(100%)
  top 0
  left 0
  right 0
  bottom 0
  &--desktop,
  &--adaptives
    position relative
    size(100%)
    &:after
      position absolute
      content ''
      top 0
      left 0
      right 0
      bottom 0
      background main-color03
  &--adaptives

.shadow-card
  box-shadow: 0px 0px 37px 9px rgba(0, 0, 0, 0.03);

.number-block
  position: relative;
.number-block-int
  position: absolute;
  color main-color01
  font-size: 92px
  line-height: 80px
  top: 0
  left: 0
.rt-font-center-md
  @media (max-width 767px)
    text-align center
.number-block-text
  width: 266px
  @media (max-width 1024px)
    width: 204px
  @media (max-width 767px)
    width auto
.td-flex-row
  @media (max-width 1024px)
    flex-direction row
.md-flex-column
  @media (max-width 767px)
    flex-direction column
.animated-block-circle
  position: absolute;
  width: 40px
  height: 40px
  left: 0
  right: 0
  margin-left auto
  margin-right auto
.border-b
  border-bottom 1px solid main-color01
.animated-block +.animated-block {
  border-left:1px dashed #B8B9C0
}
.animated-block-line
  overflow: hidden;
  min-height 290px

.animated-block-circle-fast
  animation 0.8s animate ease-in-out infinite
.animated-block-circle-slow
  animation 1.5s animate ease-in-out infinite

@keyframes animate {

  0% {
    top: -40px
  }
  100% {
    top: calc(100%  + 40px)
  }

}

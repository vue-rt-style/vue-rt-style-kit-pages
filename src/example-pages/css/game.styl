.scroll-slider-body
  position: relative;

.scroll-slider
  position: relative;

.scroll-slider-item
  width: 100%
  top: 0
  min-height 620px
  height: 100vh
  position: relative
  //opacity 0
  @media (min-width 1025px)
    height: 150vh
  .rt-button
    @media (min-width 1025px)
      opacity: 0
      transition-duration .5s
      transition-property opacity, transform
      background-repeat: no-repeat;
      transform translateY(20px)
      transition-delay 0.8s
  @media (max-width 1024px)
    position relative
    height auto
    min-height auto
  .rt-col
    @media (min-width 1023px)
      opacity: 0
      transition-property opacity
      transition-duration .3s
      position: sticky
      top: 50%;
      transform: translateY(-50%);

  //.rt-container
  //  background-color: #fff

  .rt-img
    max-width 100%
    max-height 100%
    object-fit cover

.scroll-slider-title
  @media (min-width 1023px)
    opacity 0
    transition-duration .4s
    transition-property opacity, transform
    background-repeat: no-repeat;
    transform translateY(20px)
.scroll-slider-content
  @media (min-width 1023px)
    &>div
      opacity 0
      transition-duration .4s
      transition-property opacity, transform
      background-repeat: no-repeat;
      transform translateY(20px)
      transition-delay 0.4s
      transition-duration .5s
    &>div:first-child
      transition-delay 0.3s
    &>div:last-child
      transition-delay 0.5s
      transition-duration .6s
.scroll-slider-item-active
  @media (min-width 1023px)
    .rt-col
      opacity: 1
    .scroll-slider-title,
    .scroll-slider-content,
    .rt-button
      opacity 1
      transform translateY(0px)
      &>*
        opacity 1
        transform translateY(0px)

.td-d-block
  @media (max-width 1024px)
    dominant-baseline
.scroll-slider-image
  display: none
  @media (min-width 1023px)
    margin-top: 100px
    display: block
    position sticky
    top: 0
    max-width 100%
    min-height: 620px;
    height: 100vh;
    opacity 0
    background-size: contain;
    background-position: right center;
    transition-timing-function ease-in-out
    transition-duration .5s
    transition-property background, margin, opacity
    background-repeat: no-repeat;
  
    img
      max-width 100%
      object-fit cover
.scroll-slider-image-active
  margin-top: 0
  opacity 1
.scroll-slider-pseudo
  display: none
  @media (max-width 1024px)
    position: absolute;
    top: 0
    bottom: 0
    left: 0
    right: 0
    z-index: 2
.scroll-slider-pseudo-line
  display: none
  @media (max-width 1024px)
    opacity 0
    margin-left: -10px
    margin-right: -10px
    display: block
    position: -webkit-sticky;
    position: sticky
    bottom: 0px
    width: calc(100%+20px)
    padding-top: 12px
    padding-bottom: 12px
    background-color: #fff
    box-shadow: 0px 0px 5px rgba(16, 24, 40, 0.2);
    background-position: right center;
    transition-timing-function ease-in-out
    transition-duration .3s
    transition-property box-shadow, opacity
.scroll-slider-pseudo-line-active
  opacity: 1
.scroll-slider-pseudo-line-stop
  box-shadow: 0px 0px 5px rgba(16, 24, 40, 0);
.tree-block
  @media (min-width 1280px)
    min-width: 710px!important
    max-width: 710px!important
.tree-block-neighbor
  @media (min-width 1280px)
    padding-left: 40px
  @media (max-width 1279px)
    min-width: 100%
    padding-left: 20px
.tree-block-item+.tree-block-item
  position: relative;
  &:before
    content ''
    position: absolute;
    background-color:  rgba(16, 24, 40, 0.1);
    @media (min-width 768px)
      left: 0
      width: 1px
      height: 100%
      top: 0
      bottom: 0
    @media (max-width 767px)
      left: 0
      right: 0
      width: 100%
      height: 1px
      top: 0

.old-val
  color rgba(134, 139, 149, 1)
  position: relative;
  font-size 18px
  @media (max-width 767px)
    font-size 16px
  &:before
    content ''
    width: calc(100% - 1ex)
    position: absolute;
    height: 1px
    background-color: rgba(134, 139, 149, 1)
    top: 0
    bottom: 0
    margin-top auto
    margin-bottom: auto
.tree-block-wrapper
  @media (min-width 1280px)
    flex-wrap nowrap

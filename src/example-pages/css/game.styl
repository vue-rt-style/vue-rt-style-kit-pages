
.ld-mygame,
.F
  background-color: #0e162f!important
  .app-header
    display: none
.ld-mygame-users
  height: 863px
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/mygame/users-bg.jpg)
  background-size: cover;
  transition-timing-function ease-in-out
  transition-duration 0.5s
  transition-property background
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/mygame/users-bg-2x.jpg)
  }
.ld-mygame-users--warface
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/mygame/warface-bg.jpg)
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    background-image: url(https://static-cdn.rt.ru/sites/default/files/img/mygame/warface-bg-2x.jpg)
  }
.ld-mygame-users--archeage
  background-image: url(https://static-cdn.rt.ru/sites/default/files/img/mygame/archeage-bg.jpg)
